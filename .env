# ===============================
# API Keys and Secrets
# ===============================

# OpenAI or OpenRouter API key for AI model access
OPENAI_API_KEY=your_openai_api_key_here

# Example: API key for third-party integrations (e.g., payment gateway, analytics)
THIRD_PARTY_API_KEY=your_third_party_api_key_here

# ===============================
# Database Connection
# ===============================

# Database connection URL (Postgres, MySQL, SQLite, etc.)
DATABASE_URL=postgresql://username:password@host:port/dbname

# ===============================
# Logging & Monitoring
# ===============================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# External monitoring service API key (e.g., Sentry, Datadog)
MONITORING_API_KEY=your_monitoring_service_key_here

# ===============================
# Security & OAuth
# ===============================

# JWT secret key for signing tokens
JWT_SECRET_KEY=your_jwt_secret_key_here

# OAuth client ID and secret for external auth providers (Google, GitHub, etc.)
OAUTH_CLIENT_ID=your_oauth_client_id_here
OAUTH_CLIENT_SECRET=your_oauth_client_secret_here

# ===============================
# Environment & Service Config
# ===============================

# Environment mode: development, staging, production
ENVIRONMENT=development

# Application port to listen on
APP_PORT=8000

# Base URL for backend API (useful for frontend integration)
API_BASE_URL=http://localhost:8000

# URL for any external services your app depends on
EXTERNAL_SERVICE_URL=https://api.externalservice.com

# ===============================
# Optional Feature Flags / Toggles
# ===============================

# Enable debug mode (true/false)
DEBUG_MODE=true

# Enable verbose logging for troubleshooting
VERBOSE_LOGGING=false
